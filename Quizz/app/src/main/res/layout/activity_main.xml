<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:background="#113765"
    android:orientation="vertical"
    tools:context="quiz.sunil.com.quizz.MainActivity">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Choose Your Challenge !"
    android:textSize="25sp"
    android:textStyle="bold|italic"
    android:textColor="#FFFFFF"
    android:gravity="center"/>

    <Button
        android:text="CRICKET"
        android:textSize="20sp"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="98dp"
        android:id="@+id/cricket"
        android:onClick="cricket"
        android:textColor="#FFFFFF"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Politics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cricket"
        android:textColor="#FFFFFF"
        android:layout_alignRight="@+id/cricket"
        android:layout_alignEnd="@+id/cricket"
        android:layout_marginTop="27dp"
        android:id="@+id/politics"
        android:onClick="politics"
        android:textSize="20sp"
        android:background="@color/colorAccent"/>

    <Button
        android:text="G.K"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/politics"
        android:textColor="#FFFFFF"
        android:layout_alignRight="@+id/politics"
        android:layout_alignEnd="@+id/politics"
        android:layout_marginTop="38dp"
        android:id="@+id/gk"
        android:textSize="20sp"
        android:background="@color/colorAccent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="developed by @sunilkeshari"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_marginTop="90dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView2" />

</LinearLayout>
